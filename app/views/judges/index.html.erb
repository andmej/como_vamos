<% title "Judges" %>

<% for judge in @judges %>
<div class="list_element">
  <h3> <%= link_to judge.name, judge %>

  <%= link_to image_tag("icons/world.png", :alt => "Go to judge site"), judge.url, :target => "_blank" %>

  <% if logged_in? %>

  <%= link_to(image_tag("icons/pencil.png", :alt => "Edit"),
              edit_judge_path(judge)) if current_user.authorized?(judge) %>

  <%= link_to(image_tag("icons/cross.png", :alt =>"Delete"), judge,
              :confirm => 'Are you sure?', :method => :delete) if current_user.authorized?(judge) %>
  <% end %>
</h3>

  <%= pluralize judge.problems.size, "problem" %>.



</div>
<% end %>




<% if logged_in? %>
<div class="bottom_link">
<%= link_to image_tag("icons/add.png", :alt => "New judge"), new_judge_path %>
<%= link_to "New Judge", new_judge_path%>
</div>
<% end %>
