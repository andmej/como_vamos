<% title "Judges" %>

<% for judge in @judges %>
<div class="judge">
  <h3> <%= link_to judge.name, judge %>

  <%= link_to image_tag("icons/world.png", :alt => "Go to judge site"), judge.url, :target => "_blank" %>
</h3>

  0 problems.

  <div class="actions">
      <%= link_to "Edit", edit_judge_path(judge) %> |
      <%= link_to "Destroy", judge, :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div>
<% end %>

<p><%= link_to "New Judge", new_judge_path %></p>
