<% form_for(@solution, :html => {:multipart => true}) do |f| %>
<%= f.error_messages %>


<%= f.text_field :problem_id, :class => :hidden %>
<%= f.text_field :user_id, :class => :hidden %>


<p>
  <h3><%= f.label :explanation %></h3>
  Basic HTML can be used in the explanation form.
  If you want to show some text in monospaced font,
  surround it in <%= h "<pre>" %> and <%= h "</pre>" %> tags. <br /> <br />
  <%= f.text_area :explanation %>
</p>

<p>
  <h3><%= f.label :source_code %></h3>
  <% if defined?(editing) and editing -%>
    Leave blank if you don't want to modify the source code. Select a file to
    upload otherwise. <br /> <br />
  <% end -%>
  <%= f.file_field :source_code %>
</p>

<p>
  <%= f.submit "Submit" %>
</p>
<% end %>
